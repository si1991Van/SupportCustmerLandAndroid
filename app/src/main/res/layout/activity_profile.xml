<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".viewcontroller.profile.ProfileActivity">

            <LinearLayout
                    android:id="@+id/lnUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:orientation="horizontal">
                <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_defaut_avatar"
                        app:riv_corner_radius="50dp"/>
                <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_weight="1"
                        android:text="NGUYỄN HUY TUÂN"
                        android:textColor="@color/colorText88"/>

            </LinearLayout>

            <com.andexert.library.RippleView
                    android:id="@+id/ripUpdateInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="16dp">
                <ImageView
                        style="@style/imgProfile"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_profile_information"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/imgUpdateInformation"
                        android:layout_marginLeft="10dp"/>
                <TextView
                        android:text="@string/txt_profile_update_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/txtUpdateInformation"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/imgUpdateInformation"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>
                <View
                        style="@style/view"
                        android:layout_below="@+id/imgUpdateInformation"
                />
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                    android:id="@+id/ripChangePassword"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    style="@style/matchWrap">
                <ImageView
                        style="@style/imgProfile"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_profile_change_password"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/imgChangePassword"
                        android:layout_marginLeft="10dp"/>
                <TextView
                        android:text="@string/txt_profile_change_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/txtChangePassword"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/imgChangePassword"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>
                <View
                        style="@style/view"
                        android:layout_below="@+id/imgChangePassword"
                />
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                    android:id="@+id/ripBooked"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    style="@style/matchWrap">
                <ImageView
                        style="@style/imgProfile"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_profile_masaage"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/imgBooked"
                        android:layout_marginLeft="10dp"/>
                <TextView
                        android:text="@string/txt_profile_booked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/txtMassage"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/imgBooked"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>
                <View
                        style="@style/view"
                        android:layout_below="@+id/imgBooked"
                />
            </com.andexert.library.RippleView>
            <com.andexert.library.RippleView
                    android:id="@+id/ripSetting"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    style="@style/matchWrap">
                <ImageView
                        style="@style/imgProfile"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_profile_setting"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/imgSetting"
                        android:layout_marginLeft="10dp"/>
                <TextView
                        android:text="@string/txt_profile_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/txtSetting"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/imgSetting"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>
                <View
                        style="@style/view"
                        android:layout_below="@+id/imgSetting"
                />
            </com.andexert.library.RippleView>

            <TextView
                    style="@style/matchWrap"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="@color/colorText88"
                    tools:text="Trợ giúp"
                    android:paddingLeft="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/txt_profile_help_me"/>

            <com.andexert.library.RippleView
                    android:id="@+id/ripShare"
                    android:background="@color/colorWhite"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    style="@style/matchWrap">
                <ImageView
                        style="@style/imgProfile"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_profile_share"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/imgShare"
                        android:layout_marginLeft="10dp"/>
                <TextView
                        android:text="@string/txt_profile_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/txtShare"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/imgShare"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>
                <View
                        style="@style/view"
                        android:layout_below="@+id/imgShare"
                />
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                    android:id="@+id/ripRatting"
                    android:background="@color/colorWhite"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    style="@style/matchWrap">
                <ImageView
                        style="@style/imgProfile"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_profile_rateting"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/imgRatting"
                        android:layout_marginLeft="10dp"/>
                <TextView
                        android:text="@string/txt_profile_ratting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/txtRatting"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/imgRatting"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>
                <View
                        style="@style/view"
                        android:layout_below="@+id/imgRatting"
                />
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                    android:id="@+id/ripSendEmail"
                    android:background="@color/colorWhite"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    style="@style/matchWrap">
                <ImageView
                        style="@style/imgProfile"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_profile_email"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/imgSendEmail"
                        android:layout_marginLeft="10dp"/>
                <TextView
                        android:text="@string/txt_profile_send_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/txtSendEmail"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/imgSendEmail"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>
                <View
                        style="@style/view"
                        android:layout_below="@+id/imgSendEmail"
                />
            </com.andexert.library.RippleView>
            <com.andexert.library.RippleView
                    android:id="@+id/ripInfo"
                    android:background="@color/colorWhite"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    style="@style/matchWrap">
                <ImageView
                        style="@style/imgProfile"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_profile_info_circle"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/imgInfo"
                        android:layout_marginLeft="10dp"/>
                <TextView
                        android:text="@string/txt_profile_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/txtInfo"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/imgInfo"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>
                <View
                        style="@style/view"
                        android:layout_below="@+id/imgInfo"
                />
            </com.andexert.library.RippleView>

            <TextView
                    style="@style/matchWrap"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="@color/colorText88"
                    tools:text="Tài khoản"
                    android:paddingLeft="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/txt_profile_account"/>
            <com.andexert.library.RippleView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:padding="25dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_centerInParent="true"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#c42a2a"
                        android:lineSpacingExtra="6sp"
                        tools:text="ĐĂNG XUẤT"
                        android:text="@string/txt_profile_sign_out" android:id="@+id/txtSignOut"/>
            </com.andexert.library.RippleView>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
</layout>