<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.constraint.ConstraintLayout
            style="@style/matchWrap" android:layout_height="match_parent">


        <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/ic_logo"
                android:src="@drawable/ic_logo"
                android:id="@+id/imgLogo"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:riv_corner_radius="20dp"
        />
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="?android:attr/ratingBarStyleIndicator"
                app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/rating"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/ic_background_phone"
                android:id="@+id/imageView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/rating"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" tools:text="Tổng đài hỗ trợ khách hàng dự án"
                android:textStyle="bold" android:textColor="@color/colorText21"
                android:text="@string/txt_title_formation_phone"/>
        <Button
                android:text="@string/txt_hotline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:id="@+id/btnHotline" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                android:background="@drawable/bg_btn_tab_phone"
                android:textColor="@color/colorWhite" android:textStyle="bold"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txtNameProject"/>
        <Button
                android:text="@string/txt_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:id="@+id/btnEmail" app:layout_constraintEnd_toEndOf="@+id/btnHotline"
                app:layout_constraintStart_toStartOf="@+id/btnHotline" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/btnHotline" android:background="@drawable/bg_btn_tab_phone"
                android:textColor="@color/colorWhite" android:textStyle="bold"/>
        <Button
                android:text="@string/txt_live_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:id="@+id/btnLiveChat" app:layout_constraintEnd_toEndOf="@+id/btnEmail"
                app:layout_constraintStart_toStartOf="@+id/btnEmail" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/btnEmail" android:background="@drawable/bg_btn_tab_phone"
                android:textColor="@color/colorWhite" android:textStyle="bold"/>
        <TextView
                android:text="ROMAN PLAZA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtNameProject" app:layout_constraintEnd_toEndOf="@+id/textView7"
                app:layout_constraintStart_toStartOf="@+id/textView7" android:textStyle="bold" android:textSize="18sp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
                android:textColor="@color/colorText21"/>
    </android.support.constraint.ConstraintLayout>
</layout>